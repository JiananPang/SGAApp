<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:id="@+id/card_view"
        app:cardCornerRadius="30dp"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_main"
            tools:context=".MainActivity">

        <ImageView android:layout_width="92dp"
                   android:layout_height="match_parent"
                   android:id="@+id/senator_image"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:src="@mipmap/anonymous_profile_round"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_toRightOf="@+id/senator_image"
                android:layout_toEndOf="@+id/senator_image"
                android:id="@+id/senator_text_view"
                android:textSize="24sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="80dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_toRightOf="@+id/senator_image"
                android:layout_toEndOf="@+id/senator_image"
                android:layout_centerVertical="true"
                android:id="@+id/district_text_view"
                android:textSize="24sp"
                android:layout_below="@+id/senator_text_view"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="80dp"
        />
    </RelativeLayout>


</android.support.v7.widget.CardView>